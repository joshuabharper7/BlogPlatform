@model IEnumerable<BlogPlatform.Models.Category>

@{
    ViewData["Title"] = "List of Categories";
}

<h1>List of Categories</h1>

<h3>
    <a href="/Category/Create">Create A New Category</a>
</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/Category/Details/@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <button class="button button" type="button" onclick="location.href='/Category/Update/@item.Id'">Edit</button> |
                    <button class="button button" type="button" onclick="location.href='/Category/Delete/@item.Id'">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
